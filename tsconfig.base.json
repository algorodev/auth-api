{
  "compilerOptions": {
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "build",
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2021",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "./src/**/__tests__"]
}
