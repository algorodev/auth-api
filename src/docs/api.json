{
  "openapi": "3.0.0",
  "info": {
    "version": "0.0.1",
    "title": "Authentication API",
    "description": "Authentication API created with NodeJS, Express, TypeScript and PostgreSQL"
  },
  "servers": [
    {
      "url": "http://localhost:3030/api",
      "description": "Local Server"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "description": "Hello World",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/role/": {
      "post": {
        "description": "Create Role",
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      },
      "get": {
        "description": "Get all roles",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/role/active": {
      "get": {
        "description": "Get active roles",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/role/{id}": {
      "put": {
        "description": "Update role by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "description": "Delete role by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}